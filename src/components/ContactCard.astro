---
const { title, text, link, icon } = Astro.props;
---

<div class="p-4 md:w-1/3">
    <div class="flex rounded-lg h-full bg-gray-800 p-8 flex-col">
        <div class="flex items-center mb-3">
            <div
                class="w-8 h-8 mr-3 inline-flex items-center justify-center rounded-full bg-indigo-500 text-white flex-shrink-0"
            >
                <i class={`fa-brands fa-${icon}`}></i>
            </div>
            <h2
                class="text-gray-300 text-lg title-font font-medium"
            >
                {title}
            </h2>
        </div>
        <div class="flex-grow">
            <p class="leading-relaxed text-gray-400 text-base">
                {text}
            </p>
            <a class="mt-3 text-indigo-500 inline-flex items-center gap-2" href={link}
                >Learn More
                <i class="fa-solid fa-arrow-right"></i>
            </a>
        </div>
    </div>
</div>