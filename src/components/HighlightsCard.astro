---
const { category, title, text, link } = Astro.props;
---

<div class="p-12 md:w-1/2 flex flex-col items-start">
    <span
        class="inline-block py-1 px-2 rounded bg-indigo-50 text-indigo-500 text-xs font-medium tracking-widest"
        >{category}</span
    >
    <h2
        class="sm:text-3xl text-2xl title-font font-medium mt-4 mb-4"
    >
        {title}
    </h2>
    <p class="leading-relaxed text-gray-400 mb-8">
        {text}
    </p>
    <div
        class="flex items-center flex-wrap pb-4 mb-4 border-b-2 border-gray-100 mt-auto w-full"
    >
        <a class="text-indigo-500 inline-flex items-center gap-2" href={link}
            >Learn More
            <i class="fa-solid fa-arrow-right"></i>
        </a>
        
    </div>
</div>